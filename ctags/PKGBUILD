# Maintainer: Joï¿½o Guerra <joca.bt@gmail.com>

pkgname="ctags"
pkgver="6.1.0"
pkgrel=3
pkgdesc="Generate tag files for source code"
arch=("i686" "x86_64")
url="https://ctags.sourceforge.io/"
msys2_references=(
  "cpe: cpe:/a:exuberant_ctags_project:exuberant_ctags"
)
license=("GPL")
makedepends=('autotools' 'gcc')
source=("https://github.com/universal-ctags/ctags/releases/download/v${pkgver}/universal-ctags-${pkgver}.tar.gz")
sha256sums=('fa3bafbd0dab0373c0c1788c79451bad4eed2095ad292a8dd46cc1ae6997b2c5')

build () {
  cd "universal-ctags-${pkgver}"
  ./configure --prefix=/usr \
              --enable-etags \
              --enable-macro-patterns \
              --with-readlib
  make
}

package () {
  cd "universal-ctags-${pkgver}"
  make prefix="${pkgdir}/usr" install
  install -Dm0644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
