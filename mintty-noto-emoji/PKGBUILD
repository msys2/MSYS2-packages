# This package is meant only to provide Noto Emoji 128x128 png graphics for Mintty
# according to https://github.com/mintty/mintty/wiki/Tips .
# Maintainer: J. Peter Mugaas <jpmugaas@suddenlink.net>
_pkgname=noto-emoji
pkgname=mintty-${_pkgname}
pkgver=2.038
pkgrel=1
pkgdesc="Google Noto emoji fonts"
arch=('i686' 'x86_64')
url="https://github.com/googlefonts/noto-emoji"
license=('CCPL:by-sa')
makedepends=('mintty')
source=("$_pkgname-$pkgver.tar.gz"::"https://github.com/googlefonts/noto-emoji/archive/refs/tags/v$pkgver.tar.gz")
noextract=("$_pkgname-$pkgver.tar.gz")
sha256sums=('47d8b39733a1e82efced7dee96e30cb31d205b150dc3ca44d59abbb22d027195')

prepare() {
  cd "${srcdir}"
  tar -zxf "$_pkgname-$pkgver.tar.gz" || true
}

package() {
  cd $_pkgname-$pkgver
  mkdir -p $pkgdir/usr/share/mintty/emojis/noto
  install -m644 png/128/*.png $pkgdir/usr/share/mintty/emojis/noto
  mkdir -p $pkgdir/usr/share/licenses/${_pkgname}
  install -m644 LICENSE* ${pkgdir}/usr/share/licenses/${_pkgname}/
}
