_realname='cmatrix'
pkgname="${_realname}-git"
pkgver=2.0
pkgrel=2
pkgdesc="A curses-based scrolling 'Matrix'-like screen"
arch=('any')
url="http://www.asty.org/cmatrix/"
license=('GPL3')
depends=('ncurses' 'ncurses-devel' 'make' 'autotools' 'gcc')
makedepends=('git')
conflicts=('cmatrix')
provides=('cmatrix')
source=("git+https://github.com/abishekvashok/cmatrix")
sha256sums=('SKIP')

build() {
	cd "${srcdir}/${_realname}"

	autoreconf -i
	./configure --prefix=/usr --mandir=/usr/share/man

	make
}

package() {
	cd "${srcdir}/${_realname}"

	make DESTDIR="$pkgdir" install

	for i in AUTHORS NEWS COPYING README ChangeLog INSTALL; do
		install -Dm644 $i "$pkgdir/usr/share/doc/cmatrix/$i"
	done
}
