# Maintainer: https://github.com/arturo-lang

pkgname=arturo
pkgver=0.10.0
pkgrel=1
pkgdesc="Simple, expressive & portable programming language for efficient scripting."
arch=('x86_64')
url="https://arturo-lang.io/"
license=('MIT')
purl=("pkg:github/arturo-lang/arturo@v${pkgver}")

depends=()
makedepends=('unzip')

source=(
  "https://github.com/arturo-lang/arturo/releases/download/v${pkgver}/arturo-${pkgver}-windows-amd64.zip"
)
sha256sums=('77b724d37fc70d3fb5d8d040b3c8ead103cf8323c1c32a650ccdba4465df6d86')

install=arturo.install

options=(
  !staticlibs
  !libtool
  !strip
)

package() {
  install -d "$pkgdir/opt/arturo"
  unzip -q "$srcdir/arturo-${pkgver}-windows-amd64.zip" -d "$pkgdir/opt/arturo"
}
