pkgname=lcov
pkgver=2.0
pkgrel=1
pkgdesc="front-end for GCC's coverage testing tool gcov"
arch=('any')
url="https://github.com/linux-test-project/lcov"
license=('spdx:GPL-2.0-only')
depends=('perl'
         'perl-JSON'
         'perl-PerlIO-gzip')
source=("https://github.com/linux-test-project/lcov/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('1857bb18e27abe8bcec701a907d5c47e01db4d4c512fc098d1a6acd29267bf46')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make PREFIX="/usr" DESTDIR="${pkgdir}" install
}
