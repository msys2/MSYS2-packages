# Maintainer: Alexey Pavlov <alexpux@gmail.com>

pkgname=gperf
pkgver=3.3
pkgrel=1
pkgdesc="Perfect hash function generator"
arch=('x86_64' 'i686')
url="https://www.gnu.org/software/gperf/"
msys2_repository_url="https://gitweb.git.savannah.gnu.org/gitweb/?p=gperf.git"
license=('spdx:GPL-3.0-or-later')
depends=('gcc-libs' 'info')
makedepends=('gcc' 'texinfo' 'autotools')
source=("https://ftp.gnu.org/pub/gnu/gperf/${pkgname}-${pkgver}.tar.gz"{,.sig})
sha256sums=('fd87e0aba7e43ae054837afd6cd4db03a3f2693deb3619085e6ed9d8d9604ad8'
            'SKIP')
options=('!makeflags')
validpgpkeys=('E0FFBD975397F77A32AB76ECB6301D9E1BBEAC08')

prepare() {
  cd "${srcdir}"/${pkgname}-${pkgver}
}

build() {
  cd "${srcdir}"/${pkgname}-${pkgver}

  ./configure \
    --build=${CHOST} \
    --prefix=/usr \
    --docdir=/usr/share/gperf/doc/
  make
}

check() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make check
}

package() {
  cd "${srcdir}"/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
